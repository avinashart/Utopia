<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.justmailtoavi.avinashk.utopia.teams_info"
    tools:showIn="@layout/activity_teams_info">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/top"
            >
            <pttextview.widget.PTTextView
                android:id="@+id/magadha_info"
                android:padding="6dp"
                android:layout_marginTop="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="Magadha Warriors"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                app:textWeight="bold"
                app:typeface="pt_serif_bold_italic"/>

            <pttextview.widget.PTTextView
                android:padding="8dp"
                android:id="@+id/m_exp"
                android:layout_below="@+id/magadha_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/magadha_i"
                android:textColor="#212121"
                />

            <pttextview.widget.PTTextView
                android:id="@+id/vijayanagara_info"
                android:padding="6dp"
                android:layout_marginTop="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_exp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Vijayanagara Vikings"
                android:textColor="#000000"
                app:textWeight="bold"
                app:typeface="pt_serif_bold_italic"
                />

            <pttextview.widget.PTTextView
                android:id="@+id/v_exp"
                android:padding="8dp"
                android:layout_below="@+id/vijayanagara_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="@string/v_exp"
                />


            <pttextview.widget.PTTextView
                android:id="@+id/hoysala_info"
                android:padding="6dp"
                android:layout_marginTop="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_exp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Hoysala Pirates"
                android:textColor="#000000"
                app:textWeight="bold"
                app:typeface="pt_serif_bold_italic"
                />

            <pttextview.widget.PTTextView
                android:id="@+id/h_exp"
                android:padding="8dp"
                android:layout_below="@+id/hoysala_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="@string/h_exp"
                />


            <pttextview.widget.PTTextView
                android:id="@+id/Kalinga_info"
                android:padding="6dp"
                android:layout_marginTop="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h_exp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Kalinga Kings"
                android:textColor="#000000"
                app:textWeight="bold"
                app:typeface="pt_serif_bold_italic"
                />

            <pttextview.widget.PTTextView
                android:id="@+id/k_exp"
                android:padding="8dp"
                android:layout_below="@+id/Kalinga_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="@string/k_exp"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
